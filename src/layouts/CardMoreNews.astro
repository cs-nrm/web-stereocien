---
export interface Props {
    post: {
      imagePath: string;
      title: {
         rendered: string;
      }
      content: string;
      slug: string;
      categories : {};
      yoast_head_json: {
         og_image: [
            {
               url: string;
            }
         ]
         article_published_time: string;
         author:string;         
      }
    };
    
}

const { post } = Astro.props;

var url_seccion;
//console.log(post.categories[0]);
switch (post.categories[0]){
    case 143:        
        url_seccion = 'news';
    break;
    case 537:        
        url_seccion = 'promociones';
    break;
    case 578:
        url_seccion = 'purple-noise';
    break;
    case 505:
        url_seccion = 'beat-trends';
    break;
    case 531:
        url_seccion = 'nerdosis';
    break;
    default:
        url_seccion = 'news';    
    break;      
}


---

<div class="card w-full p-4">
    <div class="overflow-hidden bg-zinc-800 rounded-lg hover:shadow-[0_2px_12px_6px_rgba(9,230,241,0.5)] group">
        <a href={`/${url_seccion}/${post.slug}/`}>
            <img class="block h-auto w-full aspect-video object-cover group-hover:text-[#09e6f1]" src={post.yoast_head_json.og_image[0].url} alt={post.title.rendered} />
        </a>
        <div class="flex items-center justify-between leading-tight px-2">
            <a class="no-underline" href={`/${url_seccion}/${post.slug}/`}>
                <h2 class="text-base text-gray-200 group-hover:text-[#09e6f1] font-bold leading-normal" set:html={post.title.rendered}></h2>
            </a>
        </div>
        <div class="flex items-center justify-between text-xs font-bold uppercase text-gray-500 px-2">            
            <p>{post.yoast_head_json.article_published_time.substring(0, 10)}</p>            
        </div>
    </div>
</div>
